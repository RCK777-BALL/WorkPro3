{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "express"],
 
    "typeRoots": ["./node_modules/@types"]
 
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
