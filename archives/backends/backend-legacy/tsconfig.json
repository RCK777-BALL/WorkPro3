{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/types/*"]
    },
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types", "../node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "preferTsExts": true
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": ["dist", "node_modules", "**/*.js"]
}
