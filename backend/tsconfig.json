{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/types/*"],
      "mongoose": ["./types/stubs/mongoose"],
      "zod": ["./types/stubs/zod"],
      "node-cron": ["./types/stubs/node-cron"],
      "express": ["./types/stubs/express"],
      "express-serve-static-core": ["./types/stubs/express"],
      "qs": ["./types/stubs/qs"]
    },
    "types": ["node"],
    "typeRoots": ["./types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "preferTsExts": true
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
