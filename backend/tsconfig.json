{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2022"],
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": { 
      "@shared/*": ["../shared/types/*"],
      "@backend-shared/*": ["shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "types/**/*.d.ts",
    "../shared/types/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests",
    "scripts",
    "seed",
    "seeds",
    "scripts/**/*",
    "tests/**/*",
    "dist",
    "node_modules"
  ],
  "ts-node": {
    "preferTsExts": true
  }
}
