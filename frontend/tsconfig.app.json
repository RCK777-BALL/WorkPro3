{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/components/common/*"],
      "@backend-shared/*": ["../backend/shared/*"]
    },
    "types": [
      "vite/client",
      "react",
      "react-dom",
      "@testing-library/jest-dom",
      "vitest",
      "node"
    ]
  },
  "include": ["src", "src/types/globals.d.ts"]
}
