{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@radix-ui/react-slot": ["src/lib/radix-slot.tsx"]
    },
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src", "src/types/globals.d.ts"]
}
