{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/components/common/*"],
      "@backend-shared/*": ["../backend/shared/*"],
      "@backend-shared/pmAnalytics": ["../backend/shared/pmAnalytics.ts"],
      "@backend-shared/reports": ["../backend/shared/reports.ts"],
      "@backend-shared/permissions": ["../backend/shared/permissions.ts"],
      "@shared-types/*": ["../shared/types/*"]
    },
    "types": [
      "vite/client",
      "react",
      "react-dom",
      "@testing-library/jest-dom",
      "vitest",
      "node"
    ]
  },
  "include": ["src", "src/types/globals.d.ts"],
  "exclude": ["src/test"]
}
