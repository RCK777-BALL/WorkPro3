{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["jest"],
    "typeRoots": [
      "./node_modules/@types",
      "./backend/node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/*"],
      "@frontend/*": ["frontend/*"]
    }
  },
  "include": ["tests/**/*.ts"],
  "exclude": ["node_modules"]
}
