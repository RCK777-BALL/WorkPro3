{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/types/*"]
    }
  },
  "include": [
    "backend/**/*.ts",
    "backend/types/**/*.d.ts",
    "dev-server/**/*.ts",
    "shared/types/**/*.ts"

  ],
  "exclude": [
    "backend/tests",
    "backend/scripts",
    "backend/seed.ts",
    "dev-server",
    "frontend",
    "node_modules"
  ]
}
