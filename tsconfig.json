{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2022"],
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./backend/node_modules/@types"
    ],
    "paths": {
      "@shared/*": ["shared/types/*"]
    }
  },
  "include": [
    "backend/**/*.ts",
    "backend/types/**/*.d.ts",
    "dev-server/**/*.ts",
    "shared/types/**/*.ts"

  ],
  "exclude": [
    "backend/tests",
    "backend/scripts",
    "backend/seed.ts",
    "dev-server",
    "frontend",
    "node_modules"
  ],
  "ts-node": {
    "preferTsExts": true
  }
}
